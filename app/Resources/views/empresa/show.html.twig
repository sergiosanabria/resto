{% extends '::base.html.twig' %}

{% block body %}
    <h1>Empresa</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ empresa.id }}</td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>{{ empresa.nombre }}</td>
            </tr>
            <tr>
                <th>Slogan</th>
                <td>{{ empresa.slogan }}</td>
            </tr>
            <tr>
                <th>Descripcion</th>
                <td>{{ empresa.descripcion }}</td>
            </tr>
            <tr>
                <th>Color</th>
                <td>{{ empresa.color }}</td>
            </tr>
            <tr>
                <th>Controlastock</th>
                <td>{% if empresa.controlaStock %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Telefonoprincipal</th>
                <td>{{ empresa.telefonoPrincipal }}</td>
            </tr>
            <tr>
                <th>Telefonosecundario</th>
                <td>{{ empresa.telefonoSecundario }}</td>
            </tr>
            <tr>
                <th>Mail</th>
                <td>{{ empresa.mail }}</td>
            </tr>
            <tr>
                <th>Sitioweb</th>
                <td>{{ empresa.sitioWeb }}</td>
            </tr>
            <tr>
                <th>Facebook</th>
                <td>{{ empresa.facebook }}</td>
            </tr>
            <tr>
                <th>Instagram</th>
                <td>{{ empresa.instagram }}</td>
            </tr>
            <tr>
                <th>Twitter</th>
                <td>{{ empresa.twitter }}</td>
            </tr>
            <tr>
                <th>Activo</th>
                <td>{% if empresa.activo %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Fechacreacion</th>
                <td>{% if empresa.fechaCreacion %}{{ empresa.fechaCreacion|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Fechaactualizacion</th>
                <td>{% if empresa.fechaActualizacion %}{{ empresa.fechaActualizacion|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <div class="form-buttons">

            <a class="btn btn-default" href="{{ path('empresa_index') }}">Volver </a>

            <a class="btn btn-default" href="{{ path('empresa_edit', { 'id': empresa.id }) }}">Editar</a>

            {{ form_start(delete_form) }}
                <input type="submit" class="btn btn-danger" value="Delete">
            {{ form_end(delete_form) }}
    </div>
{% endblock %}
