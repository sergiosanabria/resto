{% extends '::base.html.twig' %}

{% block body %}
    <h1>SectorMesa</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ sectorMesa.id }}</td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>{{ sectorMesa.nombre }}</td>
            </tr>
            <tr>
                <th>Descripcion</th>
                <td>{{ sectorMesa.descripcion }}</td>
            </tr>
            <tr>
                <th>Activo</th>
                <td>{% if sectorMesa.activo %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Fechacreacion</th>
                <td>{% if sectorMesa.fechaCreacion %}{{ sectorMesa.fechaCreacion|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Fechaactualizacion</th>
                <td>{% if sectorMesa.fechaActualizacion %}{{ sectorMesa.fechaActualizacion|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <div class="form-buttons">

            <a class="btn btn-default" href="{{ path('sectormesa_index') }}">Volver </a>

            <a class="btn btn-default" href="{{ path('sectormesa_edit', { 'id': sectorMesa.id }) }}">Editar</a>

            {{ form_start(delete_form) }}
                <input type="submit" class="btn btn-danger" value="Delete">
            {{ form_end(delete_form) }}
    </div>
{% endblock %}
