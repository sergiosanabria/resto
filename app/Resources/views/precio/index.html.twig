    {% extends '::base.html.twig' %}

    {% block body %}

    <div class="row">
            <div class="col-md-3">
                <a class="btn btn-primary margin-bottom" href="{{ path('precio_new') }}">
                    <i class="fa fa-plus-circle"></i> Nuevo
                </a>
            </div>
        </div>    <div class="row">
        <div class="col-md-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Listado Precio</h3>
                </div>
                <!-- /.box-header -->
                <div class="box-body table-responsive">
                    <table class="data-table table table-bordered table-striped">
                        <thead>
                        <tr>
                                <th>Id</th>
                                <th>Precio</th>
                                <th>Activo</th>
                                <th>Fechacreacion</th>
                                <th>Fechaactualizacion</th>
                            <th>Acciones</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for precio in precios %}
                        <tr>
                                    <td>
                                        <a href="{{ path('precio_show', { 'id': precio.id }) }}">{{ precio.id }}</a>
                                    </td>
                                    <td>{{ precio.precio }}</td>
                                    <td>{% if precio.activo %}Si{% else %}No{% endif %}</td>
                                    <td>{% if precio.fechaCreacion %}{{ precio.fechaCreacion|date('d/m/Y H:i:s') }}{% endif %}</td>
                                    <td>{% if precio.fechaActualizacion %}{{ precio.fechaActualizacion|date('d/m/Y H:i:s') }}{% endif %}</td>
                                    <td>

                                            <a class="btn btn-default"
                                               href="{{ path('precio_show', { 'id': precio.id }) }}"><i
                                                        class="fa fa-eye"></i></a>

                                            <a class="btn btn-default"
                                               href="{{ path('precio_edit', { 'id': precio.id }) }}"><i
                                                        class="fa fa-edit"></i></a>
                                    </td>
                        </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
                <!-- /.box-body -->
            </div>
        </div>
    </div>

    {% endblock %}
