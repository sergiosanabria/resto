{% extends '::base.html.twig' %}

    {% block body %}
        <div class="box box-default">
            <div class="box-header with-border">
                <h3 class="box-title">Nueva Precio</h3>

                <div class="box-tools pull-right">
                    <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i>
                    </button>
                    <button type="button" class="btn btn-box-tool" data-widget="remove"><i class="fa fa-remove"></i>
                    </button>
                </div>
            </div>
            <!-- /.box-header -->
            <div class="box-body">

                <div class="row margin-bottom ">
                    <div class="col-md-6">


                        {% if precio.producto %}

                            <h4 class="no-margin"><b>{{ precio.producto.nombre }}</b></h4>

                            <br>

                            <b>Precio de venta actual</b>:

                            $ {{ precio.producto.precioDeVenta }}

                            <br>

                            <b>Precio de costo actual</b>:

                            $ {{ precio.producto.precioDeCosto }}

                            <br>
                        {% endif %}




                        {% if precio.combo %}
                            <h4 class="no-margin"><b>{{ precio.combo.nombre }}</b></h4>

                            <br>

                            <b>Precio de venta actual</b>:

                            $  {{ precio.combo.precioDeVenta }}

                            <br>
                            <b>Precio de costo actual</b>:

                            $ {{ precio.combo.precioDeCosto }}

                            <br>

                        {% endif %}


                    </div>


                </div>
                <div class="row">
                    <div class="col-md-12">


                        {{ form_start(form) }}
                        {{ form_row(form.precio) }}
                        {{ form_row(form.tipoPrecio) }}
                        <div class="hidden">
                            {{ form_rest(form) }}
                        </div>
                        <button type="submit" class="btn btn-primary"><i
                                    class="fa fa-save"></i> Guardar
                        </button>
                        {{ form_end(form) }}
                    </div>
                </div>
                <!-- /.row -->
            </div>
        </div>

        <div class="form-buttons">

            <a class="btn btn-default" href="{{ path('precio_index') }}">Volver </a>
        </div>
    {% endblock %}
